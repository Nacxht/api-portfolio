{
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.7.5",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "winston": "npm:winston@^3.17.0",
    "zod": "npm:zod@^4.0.17"
  },
  "tasks": {
    "start": "deno run --allow-net ./src/main.ts",
    "dev": "deno serve -A --unstable-kv --watch ./src/main.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "strict": true,
    "noImplicitAny": true
  },

  "lint": {
    "include": ["src/*"]
  }
}
